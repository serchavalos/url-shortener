{
  "name": "url-shortner",
  "version": "0.0.1",
  "description": "Provides a service for submitting aliases for URLs",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-views": "copyfiles -f -u 1 src/**/*.html dist/views/",
    "lint": "eslint src --ext .ts",
    "prestart": "npm run clean && npm run copy-views",
    "start": "tsc && node dist/index.js",
    "test:unit": "jest src",
    "test:unit:watch": "npm test:unit -- --watch",
    "test:integration": "jest --testTimeout=10000 tests/integration",
    "test:integration:watch": "npm test:integration -- --watch",
    "test": "npm test:unit && npm test:integration"
  },
  "author": "Sergio Avalos <sergio.avalos@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "asset": "^0.4.13",
    "copyfiles": "^2.4.1",
    "eslint": "^8.8.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "jest": "^27.5.1",
    "sqlite3": "^4.2.0"
  }
}
